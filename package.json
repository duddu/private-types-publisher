{
  "name": "shared-types-publisher",
  "version": "1.0.0-development",
  "description": "",
  "keywords": [],
  "main": "dist/lib/index.js",
  "typings": "dist/types/index.d.ts",
  "bin": "./dist/lib/index.js",
  "files": [
    "dist"
  ],
  "author": "Davide Doronzo <davide.doronzo@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/duddu/shared-types-publisher.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "typedoc": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:prod && npm run build"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.5",
    "fs-extra": "^7.0.1",
    "simple-git": "^1.110.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.11",
    "@types/mock-fs": "^3.6.30",
    "@types/node": "^10.0.0",
    "commitizen": "^3.0.7",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-config": "^24.5.0",
    "jest-haste-map": "^24.0.0",
    "jest-resolve": "^24.1.0",
    "lint-staged": "^8.1.5",
    "mock-fs": "^4.8.0",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.0"
  }
}
